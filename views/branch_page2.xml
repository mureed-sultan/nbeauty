<odoo>
  <data>
    <template id="website_branch_locator" name="Store Locator">
      <t t-call="website.layout">

        <style>
          * { box-sizing: border-box; }


          /* ‚úÖ Animations */
          @keyframes fadeUp {
            0% { opacity: 0; transform: translateY(20px) scale(0.95); }
            100% { opacity: 1; transform: translateY(0) scale(1); }
          }
          @keyframes fadeInScale {
            0% { opacity: 0; transform: scale(0.8); }
            100% { opacity: 1; transform: scale(1); }
          }
          @keyframes slideFromLeft {
            0% { opacity: 0; transform: translateX(-30px); }
            100% { opacity: 1; transform: translateX(0); }
          }
          @keyframes slideFromRight {
            0% { opacity: 0; transform: translateX(30px); }
            100% { opacity: 1; transform: translateX(0); }
          }

          /* üîπ Top Navbar */
          .navbar {
            background: #fff;
            padding: 15px 20px;
            border-radius: 12px;
            border: 1px solid #e0e0e0;
            display: flex;
            gap: 12px;
            flex-wrap: wrap;
            box-shadow: 0 3px 12px rgba(0,0,0,0.06);
            margin-bottom: 20px;
            animation: fadeInScale 0.6s ease-out;
          max-width:50vw;
          margin:auto;
          }

          /* üîπ Inputs */
          .navbar input,
          .navbar select {
            padding: 12px 14px;
            border: 1px solid #ccc;
            border-radius: 8px;
            flex: 1;
            max-width: 300px;
            font-size: 15px;
            background: #fdfdfd;
            transition: all 0.3s ease;
          }
          .navbar input:focus,
          .navbar select:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0,123,255,0.2);
            outline: none;
            background: #fff;
          }

          /* üîπ Layout */
          .main-container {
            display: flex;
            height: calc(100vh - 220px);
            background: #f7f8fa;
            gap: 15px;
            animation: fadeUp 0.8s ease-out;
          }
          #map {
            flex: 2;
            height: 100%;
            min-height: 400px;
            border-radius: 12px;
            overflow: hidden;
            animation: slideFromLeft 0.7s ease-out;
          }

          /* üîπ Branch list panel */
          .branch-list {
            flex: 1;
            overflow-y: auto;
            padding: 20px;
            background: #fff;
            border-radius: 12px;
            border: 1px solid #e0e0e0;
            animation: slideFromRight 0.7s ease-out;
          }

          /* üîπ Branch Card */
          .branch-card {
            background: #fff;
            border: 1px solid #e0e0e0;
            padding: 15px;
            margin-bottom: 12px;
            border-radius: 10px;
            cursor: pointer;
            transition: transform 0.25s, box-shadow 0.25s;
            animation: fadeUp 0.5s ease-out;
          }
          .branch-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 6px 16px rgba(0,0,0,0.08);
          }
          .branch-card h4 { margin: 0 0 6px; font-size: 17px; color: #333; }
          .branch-card p { margin: 2px 0; font-size: 14px; color: #555; }

          /* üîπ Directions Button */
          .directions-btn {
            background: #007bff;
            color: white;
            border: none;
            padding: 8px 14px;
            border-radius: 6px;
            cursor: pointer;
            font-size: 13px;
            margin-top: 8px;
            transition: background 0.3s ease;
          }
          .directions-btn:hover {
            background: #0056b3;
          }

          @media (max-width: 1024px) {
            .main-container { flex-direction: column; height: auto; }
            #map { height: 350px; }
            .branch-list { border: 1px solid #ddd; }
          }
        </style>

        <div class="">
          <!-- ‚úÖ Navbar -->
          <div class="navbar">
            <input type="text" id="branchSearch" placeholder="üîç Search Branch Name..."/>
            <select id="cityDropdown"><option value="">üèô All Cities</option></select>
            <select id="branchDropdown"><option value="">üè¢ All Branches</option></select>
          </div>

          <!-- ‚úÖ Map + Branch List -->
          <div class="main-container">
            <div id="map"></div>
            <div class="branch-list" id="branchList"></div>
          </div>
        </div>

        <!-- ‚úÖ JSON Data -->
        <script type="application/json" id="cityBranchData">
            <t t-raw="city_branch_json"/>
        </script>

        <!-- ‚úÖ Scripts -->
        <xpath expr="//footer" position="inside">
          <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css"/>
          <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
          <script src="/nbeauty/static/src/js/branches.js"></script>
        </xpath>

      </t>
    </template>
  </data>
</odoo>
