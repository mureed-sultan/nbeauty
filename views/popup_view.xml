<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="nbeauty_popup_template" inherit_id="website.layout">
        <xpath expr="//body" position="inside">
            <div id="nbeauty-popup" class="nbeauty-popup-overlay" style="display:none;">
                <div class="nbeauty-popup-content">
                    <!-- âœ… Close Button -->
                    <button class="nbeauty-popup-close" type="button"
                            onclick="document.getElementById('nbeauty-popup').style.display='none'">Ã—</button>

                    <!-- Image -->
                    <img src="/nbeauty/static/src/img/lowres/bannerimage.jpg" alt="Beauty Banner"
                         class="nbeauty-popup-image"/>

                    <h3 class="nbeauty-popup-title">Transform Your Beauty Routine</h3>
                    <h4 class="nbeauty-popup-subtitle">
                        Subscribe to our salonâ€™s newsletter for insider access to expert advice,
                        latest styles, and members-only discounts.
                    </h4>

                    <form id="nbeauty-popup-form">
                        <input type="text" name="name" placeholder="Name" required="required"/>
                        <input type="email" name="email" placeholder="Email" required="required"/>
                        <input type="tel" name="phone" placeholder="Phone"/>
                        <textarea name="requirements" placeholder="Tell us your requirements"></textarea>
                        <button type="submit">Join</button>
                    </form>
                </div>
            </div>
        </xpath>

        <xpath expr="//footer" position="inside">
            <script type="text/javascript" src="/nbeauty/static/src/js/popup.js"></script>

            <style>
                :root {
                    --dark-pink: #d7a7aa;
                    --dark-pink-hover: #c48c8f;
                }

                .nbeauty-popup-overlay {
                    position: fixed;
                    top: 0; left: 0;
                    width: 100%; height: 100%;
                    background: rgba(0,0,0,0.8);
                    display: flex; justify-content: center; align-items: center;
                    z-index: 9999;
                    animation: fadeIn 0.4s ease forwards;
                    padding: 10px;
                }

                .nbeauty-popup-content {
                    background: #fff;
                    padding: 20px;
                    border-radius: 12px;
                    max-width: 460px;
                    width: 90%;
                    text-align: center;
                    position: relative;
                    transform: scale(0.8);
                    opacity: 0;
                    animation: popupScale 0.4s ease forwards;
                }

                /* âœ… Close Button */
                .nbeauty-popup-close {
                    position: absolute;
                    top: 0;
                    right: 0;
                    background: var(--dark-pink);
                    color: #fff;
                    border: none;
                    font-size: 20px;
                    width: 36px;
                    height: 36px;
                    border-radius: 0 12px 0 12px;
                    cursor: pointer;
                    line-height: 1;
                    padding: 0;
                    font-weight: bold;
                    transition: background 0.3s ease;
                }
                .nbeauty-popup-close:hover {
                    background: var(--dark-pink-hover);
                }

                .nbeauty-popup-image {
                    width: 100%;
                    border-radius: 8px;
                    margin-bottom: 15px;
                    max-height: 200px;
                    object-fit: cover;
                }

                .nbeauty-popup-title {
                    font-size: 22px;
                    margin: 10px 0 5px;
                    color: var(--dark-pink);
                    font-weight: 700;
                }

                .nbeauty-popup-subtitle {
                    font-size: 14px;
                    color: #555;
                    margin-bottom: 15px;
                    line-height: 1.4;
                }

                #nbeauty-popup-form input,
                #nbeauty-popup-form textarea {
                    width: 100%;
                    margin: 6px 0;
                    padding: 10px;
                    border: 1px solid #ccc;
                    border-radius: 6px;
                    font-size: 14px;
                }

                #nbeauty-popup-form button {
                    background: var(--dark-pink);
                    color: #fff;
                    border: none;
                    padding: 12px;
                    margin-top: 10px;
                    cursor: pointer;
                    border-radius: 6px;
                    width: 100%;
                    font-weight: bold;
                    transition: background 0.3s ease;
                }

                #nbeauty-popup-form button:hover {
                    background: var(--dark-pink-hover);
                }

                /* ðŸ“± Responsive Fix */
                @media (max-width: 767px) {
                    .nbeauty-popup-content {
                        width: 80vw; /* âœ… Use 80% of viewport width */
                        padding: 15px;
                        border-radius: 8px;
                    }
                    .nbeauty-popup-close {
                        width: 30px;
                        height: 30px;
                        font-size: 18px;
                    }
                    .nbeauty-popup-title {
                        font-size: 18px;
                    }
                    .nbeauty-popup-subtitle {
                        font-size: 13px;
                    }
                    #nbeauty-popup-form input,
                    #nbeauty-popup-form textarea {
                        font-size: 13px;
                        padding: 8px;
                    }
                    #nbeauty-popup-form button {
                        padding: 10px;
                        font-size: 14px;
                    }
                }

                @keyframes fadeIn {
                    from { opacity: 0; }
                    to { opacity: 1; }
                }

                @keyframes popupScale {
                    0% { transform: scale(0.8); opacity: 0; }
                    100% { transform: scale(1); opacity: 1; }
                }
            </style>
        </xpath>
    </template>
</odoo>
