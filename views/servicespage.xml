<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <template id="nbeauty-services" name="NBeauty Services">
      <t t-call="website.layout">

        <!-- Include main.css -->
        <link rel="stylesheet" type="text/css" href="/nbeauty/static/src/css/main.css"/>

        <section id="services" class="_2block-div about" style="padding-top: 3rem; padding-bottom: 3rem; background-color: #fff0f5;">
          <div class="container">

            <!-- Header -->
            <div class="text-center mb-12">
              <p class="p-18 _2block-1 hide">Services:</p>
              <h1 class="h-124">At N Beauty,</h1>
              <h6 class="h-100 _2block-2">We present diverse services tailored to accentuate your natural beauty.</h6>
            </div>

            <!-- Filters -->
            <div class="services-filters flex flex-wrap justify-center items-center gap-4 mb-10">
              <input id="service-search-input" type="text" placeholder="Search services..."
                     class="input-pill p-2 px-4 border border-gray-300 rounded-full"/>
              <select id="category-filter"
                      class="input-pill p-2 px-4 border border-gray-300 rounded-full">
                <option value="">All Categories</option>
                <t t-foreach="categories" t-as="category">
                  <option t-att-value="category.id">
                    <t t-esc="category.name"/>
                  </option>
                </t>
              </select>
            </div>

            <!-- Service Cards -->
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-10" id="services-container">
              <t t-foreach="services" t-as="service">
                <a t-att-href="'/services/' + service.slug"
                   class="group block service-item bg-white p-6 border rounded-3xl hover:shadow-2xl transition-all duration-300"
                   t-att-data-category-id="service.category_id.id"
                   t-att-data-service-name="service.name.lower()">
                  <div class="flex flex-col items-center gap-4">
                    <div class="w-24 h-24 rounded-full overflow-hidden shadow-md">
                      <img t-att-src="'/web/image/website.service/%s/icon' % service.id"
                           t-att-alt="service.name"
                           class="object-cover w-full h-full"/>
                    </div>
                    <h3 class="h-50 text-center font-semibold text-lg">
                      <t t-esc="service.name"/>
                    </h3>
                    <span class="button-pill border border-black rounded-full px-5 py-1 text-sm mt-2">
                      Book Now
                    </span>
                  </div>
                </a>
              </t>
            </div>

          </div>
        </section>

        <!-- Location Section -->
        <section class="appointment-pop-up-div py-10 bg-gray-100">
          <div class="appointment-body-div container">
            <h1 class="h-50 medium text-center mb-10">Choose your preferred location</h1>
            <div class="locations-div flex gap-10 flex-wrap justify-center">
              <div class="location-div-pop-up max-w-sm bg-white p-6 rounded-xl shadow-lg">
                <p class="p-20 location">Business Bay</p>
                <p class="p-18 black">
                  <a href="https://maps.app.goo.gl/NRWTNhf5NnpZGmiP7" target="_blank">DAMAC Maison Cour Jardin Hotel</a> G-Floor / Shop 5
                </p>
                <p class="p-18 opening-soon text-red-500 mt-3">Re-opening soon!<br/>We are working to enhance your experience</p>
              </div>
              <div class="location-div-pop-up max-w-sm bg-white p-6 rounded-xl shadow-lg">
                <p class="p-20 location">Dubai Mall</p>
                <p class="p-18 black">
                  <a href="https://maps.app.goo.gl/rFVCXsU5pZqvFQHS7" target="_blank">Dubai Mall Zabeel Expansion 2-Floor</a>
                </p>
              </div>
            </div>
          </div>
        </section>

        <!-- Marquee -->
        <div class="embed">
          <div class="marquee-horizontal-css w-embed">
            <style>
              .track-horizontal {
                position: absolute;
                white-space: nowrap;
                will-change: transform;
                animation: marquee-horizontal 40s linear infinite;
              }
              @keyframes marquee-horizontal {
                from { transform: translateX(0); }
                to { transform: translateX(-50%); }
              }
            </style>
          </div>
        </div>

        <!-- JS -->
        <xpath expr="//footer" position="inside">
          <script src="/nbeauty/static/src/js/servicePage.js"></script>
        </xpath>

      </t>
    </template>
  </data>
</odoo>
